[databases]
{% for item in list_db %}
{{ item.name }} = host= {{ item.hosts }} port= {{ item.port }} dbname= {{ item.db_name }}
{% endfor %}
[pgbouncer]
logfile = /var/log/pgbouncer/pgbouncer.log
pidfile = /var/run/pgbouncer/pgbouncer.pid
listen_addr = {{ listen_addr_pgbouncer }}
listen_port = {{ listen_port_pgbouncer }}
unix_socket_dir = /tmp
auth_type = md5
auth_file = /etc/pgbouncer/userlist.txt
admin_users = pgbouncer
stats_users = pgbouncer
pool_mode = session
max_client_conn = {{ max_connection_pgbouncer }}
default_pool_size = {{ default_pool_size }}
ignore_startup_parameters = extra_float_digits
